{
  "extends": [
    "config:base",
    "group:test",
    "group:linters"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "most non-major dependencies",
      "groupSlug": "most-minor-patch"
    },
    {
      "matchPackageNames": [
        "com.microsoft.sqlserver:mssql-jdbc"
      ],
      "allowedVersions": "/^.*\\.jre11$/"
    }
  ],
  "postUpdateOptions": [
    "yarnDedupeHighest"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ]
  },
  "pipenv": {
    "enabled": true
  }
}
