{
  "extends": [
    "config:base",
    "group:test",
    "group:linters"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "labels": [
    "dependencies"
  ],
  "schedule": [
    "every weekday"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "most non-major dependencies",
      "groupSlug": "most-minor-patch"
    },
    {
      "matchPackageNames": [
        "com.graphql-java:graphql-java-extended-scalars",
        "react-router-bootstrap"
      ],
      "enabled": false
    },
    {
      "matchPackagePrefixes": [
        "com.graphql_java_generator"
      ],
      "enabled": false
    },
    {
      "groupName": "NPM, dev-dependencies, Babel",
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchPackagePrefixes": ["@babel/"]
    },
    {
      "groupName": "NPM, dev-dependencies, GraphQL Code Generator",
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchPackagePrefixes": ["@graphql-codegen/"]
    },
    {
      "groupName": "NPM, dev-dependencies, Storybook",
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchPackagePrefixes": ["@storybook/"]
    },
    {
      "groupName": "NPM, dev-dependencies, WebdriverIO",
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchPackagePrefixes": ["@wdio/", "webdriverio"]
    },
    {
      "groupName": "NPM, dependencies, Blueprint",
      "matchManagers": ["npm"],
      "matchDepTypes": ["dependencies"],
      "matchPackagePrefixes": ["@blueprint/"]
    },
    {
      "groupName": "NPM, dependencies, Emotion",
      "matchManagers": ["npm"],
      "matchDepTypes": ["dependencies"],
      "matchPackagePrefixes": ["@emotion/"]
    },
    {
      "groupName": "NPM, dependencies, Fullcalendar",
      "matchManagers": ["npm"],
      "matchDepTypes": ["dependencies"],
      "matchPackagePrefixes": ["@fullcalendar/"]
    },
    {
      "groupName": "NPM, dependencies, Projectstorm",
      "matchManagers": ["npm"],
      "matchDepTypes": ["dependencies"],
      "matchPackagePrefixes": ["@projectstorm/"]
    },
    {
      "groupName": "NPM, dependencies, Slate",
      "matchManagers": ["npm"],
      "matchDepTypes": ["dependencies"],
      "matchPackagePrefixes": ["slate"]
    },
    {
      "groupName": "Gradle/NPM, dependencies, Keycloak",
      "matchManagers": ["gradle", "npm"],
      "matchPackagePrefixes": ["org.keycloak:", "keycloak-"]
    }
  ],
  "postUpdateOptions": [
    "yarnDedupeHighest"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ]
  },
  "pipenv": {
    "enabled": true
  }
}
